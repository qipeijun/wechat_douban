page{
  height: 100%;
  background: #b3d4db;
}
.container{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.pic{
  width: 200rpx;
  height: 200rpx;
  margin-top: 160rpx;
}

.user-name,.moto{
  font-size: 32rpx;
  font-weight: normal;
  margin-top: 100rpx;
}

.moto-container{
  border: 1rpx solid #405f80;
  width: 200rpx;
  height: 80rpx;
  border-radius: 5rpx;
  text-align: center;
  margin-top: 200rpx;
}

.moto{
  font-size: 22rpx;
  font-weight: normal;
  line-height: 80rpx;
  color: #405f80;
}